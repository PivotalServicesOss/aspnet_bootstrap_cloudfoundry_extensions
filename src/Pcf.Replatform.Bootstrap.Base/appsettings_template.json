{
  "spring": {
    "application": {
      "name": "<app_name>"
    }
  },
  "management": {
    "tracing": {
      "AlwaysSample": true,
      "UseShortTraceIds": false,
      "EgressIgnorePattern": "/api/v2/spans|/v2/apps/.*/permissions|/eureka/.*|/oauth/.*"
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning",
          "Pivotal": "Warning",
          "Steeltoe": "Warning"
        }
      },
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Level}]{CorrelationContext}=> RequestPath:{RequestPath} => {SourceContext} => {Message} {Exception}{NewLine}"
          }
        },
        {
          "Name": "Debug",
          "Args": {
            "outputTemplate": "[{Level}]{CorrelationContext}=> RequestPath:{RequestPath} => {SourceContext} => {Message} {Exception}{NewLine}"
          }
        }
      ],
      "Enrich": [
        "FromLogContext"
      ],
      "Filter": [
        {
          "Name": "ByExcluding",
          "Args": {
            "expression": "Contains(@Message, 'cloudfoundryapplication')"
          }
        }
      ]
    }
  }
}
